{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    // "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
    },
    "types": [
      "node",
      "long",
      "mocha"
